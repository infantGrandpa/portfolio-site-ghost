{
    "name": "square",
    "description": "Simple & clean ghost theme",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=4.0.0"
    },
    "license": "MIT",
    "author": {
        "name": "Trexthemes",
        "email": "trexthemes@gmail.com",
        "url": "https://trexthemes.com"
    },
    "config": {
        "card_assets": true,
        "posts_per_page": 10,
        "image_sizes": {
            "xxs": {
                "width": 100
            },
            "xs": {
                "width": 600
            },
            "l": {
                "width": 1500
            },
            "xl": {
                "width": 2500
            }
        },
        "custom": {
            "endpoint_form": {
                "type": "text"
            },
            "instagram_link": {
                "type": "text"
            },
            "full_description": {
                "type": "text",
                "group": "homepage"
            },
            "second_color": {
                "type": "color",
                "group": "homepage",
                "default": "#31274b"
            },
            "show_notification": {
                "type": "boolean",
                "group": "homepage",
                "default": false
            },
            "notification_color": {
                "type": "color",
                "group": "homepage",
                "default": "#d8fb52"
            },
            "notification_text": {
                "type": "text",
                "group": "homepage"
            },
            "notification_link_text": {
                "type": "text",
                "group": "homepage"
            },
            "notification_link": {
                "type": "text",
                "group": "homepage"
            },
            "time_days_of_work": {
                "type": "text"
            },
            "direct_contact": {
                "type": "text"
            },
            "adress": {
                "type": "text"
            }
        }
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme",
        "blog",
        "minimal",
        "clean",
        "simple",
        "multipropose",
        "magazine",
        "reading"
    ],
    "devDependencies": {
        "@tailwindcss/line-clamp": "^0.4.4",
        "autoprefixer": "10.4.16",
        "beeper": "3.0.0",
        "cssnano": "6.0.1",
        "gscan": "^4.40.0",
        "gulp": "^4.0.2",
        "gulp-concat": "2.6.1",
        "gulp-file-include": "^2.3.0",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "9.0.1",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "^6.0.0",
        "postcss": "^8.4.31",
        "postcss-cli": "^10.1.0",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.0",
        "tailwindcss": "^3.3.5"
    },
    "dependencies": {
        "@tailwindcss/typography": "^0.5.10",
        "datasette": "^1.0.1",
        "flaschenpost": "^5.1.1",
        "gulp-cli": "^2.3.0",
        "lodash": "^4.17.21",
        "tailwind": "^4.0.0"
    }
}
