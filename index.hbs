{{!< default}}

<main>
    <div class="container mx-auto py-8">
        <h1 class="display-font main-color">
            {{page.title}}
        </h1>
        <div class="text-base main-color mx-auto mt-4">
            {{page.excerpt}}
        </div>
    </div>
    <div class="bg-[#f6f7f8] py-8">
        <div class="container">
            <!-- Posts -->
            <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-4" id="trex_blog">
                {{#foreach posts}}
                    {{> 'loop'}}
                {{/foreach}}
            </div>
            <!-- /Posts -->
            {{pagination}}
        </div>
    </div>
</main>