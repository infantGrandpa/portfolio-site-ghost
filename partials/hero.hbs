<section
    class="container grid grid-cols-1 md:grid-cols-5 h-[300px] md:h-[400px] lg:h-[700px] overflow-hidden"
>
    <div
        class="md:col-span-3 flex items-center h-[300px] md:h-[400px] lg:h-[700px]"
    >
        <div class="max-w-[600px] mr-10 md:mr-14">
            <p
                class="text-[44px] line-height-[1em] md:text-3xl xl:text-5xl second-color"
            >
                Hello there! Hey Stinky!
            </p>
            <h1
                class="display-font text-6xl md:text-4xl xl:text-6xl second-color my-4"
            >
                {{@site.description}}
            </h1>
            <p class="text-2xl second-color">
                {{#if @custom.full_description}}
                    {{@custom.full_description}}
                {{else}}
                    I turn 'lost in translation' into collaboration, marrying
                    design empathy with engineering logic to deliver standout UX
                    your users will love.
                {{/if}}
            </p>
        </div>
    </div>

    <div class="col-span-2 hidden md:block relative">
        <img
            class="lazyload object-cover w-full h-full"
            src="{{img_url @site.cover_image size="xxs"}}"
            data-src="{{img_url @site.cover_image size="xl"}}"
            alt="{{@site.title}}"
        />
    </div>
</section>