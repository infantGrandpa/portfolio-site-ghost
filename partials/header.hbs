{{> 'ad'}}

<header class="border-b border-gray-100 py-6">
    <div class="container">
        <div class="flex items-center">
            <div>
                <a href="{{@site.url}}">
                    {{> logo svgClasses="max-w-[48px] md:max-w-[64px] main-color-svg hover:scale-125 transition-transform duration-300 ease-out-back"}}
                </a>
                {{#if @site.logo}}
                    {{!-- <a href="{{@site.url}}">
                        <img src="{{@site.logo}}" alt="{{@site.title}}" class="max-w-[48px] md:max-w-[64px] fill-black">
                    </a> --}}
                {{else}}
                    <a href="{{@site.url}}" class="text-4xl font-semibold tracking-tighter">
                        {{@site.title}}
                    </a>
                {{/if}}
            </div>
            <div class="flex justify-end flex-1">
                <button data-ghost-search class="md:order-last px-8">
                        <i class="fa-solid fa-magnifying-glass main-color"></i>
                    </button>
                {{navigation}}
            </div>
            <div class="flex items-center space-x-4 justify-end">
                {{#get "pages" filter="tag:hash-contact" limit="1" as |post|}}
                    {{#if post}}
                        {{#post}}
                            <a href="{{url}}" class="second-bg hidden sm:inline-block rounded-md px-8 py-5 text-xs uppercase font-bold bg-black hover:main-bg transition-all duration-75 text-white">
                                {{title}}
                            </a>
                        {{/post}}
                    {{/if}}
                {{/get}}
                {{#if member}}
                    <button data-portal="account/profile" data-tippy-content="{{t 'Profile'}}" data-tippy-placement="bottom" data-tippy-animation="fade">
                        <i class="fa-solid fa-user"></i>
                    </button>
                    <button data-members-signout data-tippy-content="{{t 'Logout'}}" data-tippy-placement="bottom" data-tippy-animation="fade">
                        <i class="fa-solid fa-right-from-bracket"></i>
                    </button>
                {{/if}}
            </div>
        </div>
    </div>
</header>