{{#get "posts" filter="tag:hash-project" limit="3" include="tags"}}
{{#match posts.length ">" 0}}
    <section class="bg-[#f6f7f8] pt-8 pb-16">
        <div class="mx-3 md:mx-0 md:container md:mx-auto">
            <!-- Projects Title -->
            <div class="flex flex-col space-y-4 lg:space-y-0 lg:flex-row justify-end mb-7">
                {{#get "pages" filter="slug:project" limit="1" as |post|}}
                    {{#if post}}
                        {{#post}}
                            <div class="basis-2/4">
                                <h2 class="display-font main-color">
                                    {{title}}
                                </h2>
                                <p class="text-sm main-color font-semibold mt-1 mb-2 block">
                                    {{excerpt}}
                                </p>
                            </div>
                        {{/post}}
                    {{/if}}
                {{/get}}
                <div class="lg:basis-2/4 flex justify-end items-center space-x-1">
                    <a href="{{@site.url}}/projects/" class="text-sm uppercase text-grey font-semibold">{{t "discover more"}}</a>
                    <i class="fa-solid fa-arrow-right text-grey text-sm"></i>
                </div>
            </div>
            <!-- Projects -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                {{#foreach posts}}
                    {{> 'loop-projects'}}
                {{/foreach}}
            </div>
            <!-- /Projects -->
        </div>
    </section>
{{/match}}
{{/get}}