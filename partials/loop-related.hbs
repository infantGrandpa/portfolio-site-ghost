<article class="h-auto bg-white rounded-[32px] p-6 pb-8 trex_post">
    {{!-- Project Loop --}}
    {{#if feature_image}}
        <div class="relative mb-5">
            <a href="{{url}}" class="rounded-lg relative overflow-hidden aspect-square w-full block">
                <img class="rounded-lg hover:scale-[1.08] transition duration-300 ease-in-out lazyload fadeup absolute object-cover object-top w-full" src="{{img_url feature_image size="xxs"}}" data-src="{{img_url feature_image size="xl"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
            </a>
        </div>
    {{/if}}
    {{#if title}}
        <a href="{{url}}">
            <h3 class="mb-3 display-font main-color leading-7 line-clamp-2">
                {{title}}
            </h3>
        </a>
    {{/if}}
    <div class="text-sm font-medium line-clamp-3">
        {{excerpt}}
    </div>
</article>