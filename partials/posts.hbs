{{#get "posts" limit="3" filter="tag:-hash-project" include="tags,authors"}}
{{#match posts.length ">" 0}}
    <section class="bg-[#f6f7f8] py-16">
        <div class="mx-3 md:mx-0 md:container md:mx-auto">
            <!-- Title -->
            <div class="flex flex-col space-y-4 lg:space-y-0 lg:flex-row justify-end items-center mb-7">
                {{#get "pages" filter="slug:blog" limit="1" as |post|}}
                    {{#if post}}
                        {{#post}}
                            <div class="basis-2/4">
                                <h2 class="display-font text-4xl second-color">
                                    {{title}}
                                </h2>
                                <span class="text-sm uppercase text-grey font-semibold mb-2 block">
                                    {{excerpt}}
                                </span>
                            </div>
                        {{/post}}
                    {{/if}}
                {{/get}}
                <div class="lg:basis-2/4 flex justify-end items-center space-x-1">
                    <a href="{{@site.url}}/blog/" class="text-xs uppercase text-grey font-semibold">{{t "discover more"}}</a>
                    <i class='bx bx-right-arrow-alt text-grey'></i>
                </div>
            </div>
            <!-- Posts -->
            <div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">
                {{#foreach posts}}
                    {{> 'loop'}}
                {{/foreach}}
            </div>
            <!-- /Posts -->
        </div>
    </section>
{{/match}}
{{/get}}