<footer class="text-center py-16 main-bg">
    <div class="container">
        <div class="text-3xl text-white display-font mb-2">
            {{t "Sign up to our newsletters"}}
        </div>

        <div class="text-sm text-white">
            {{t
                "Subscribe now to get notified about excluive stories from the writing every week!"
            }}
        </div>

        <form class="mt-10 max-w-[550px] mx-auto" data-members-form="subscribe">
            <div
                class="relative flex flex-row main-color bg-white rounded-lg text-sm"
            >
                <input
                    data-members-email
                    type="email"
                    placeholder="{{t 'email address'}}"
                    class="main-color rounded-lg text-sm px-4 py-4 placeholder:text-xs placeholder:uppercase block !outline-none w-full placeholder:text-grey"
                    required
                    autocomplete="off"
                />
                <button
                    type="submit"
                    class="rounded-lg py-3 text-xs tracking-wide uppercase font-bold second-bg main-color hover:scale-125 inline-block px-8 transition-transform duration-300 ease-out-back"
                >
                    {{t "subscribe"}}
                </button>
            </div>
            <div class="mt-2 text-left font-medium text-white italic">
                <small class="alert-loading block">{{t
                        "Processing your application..."
                    }}</small>
                <small class="alert-success block">{{t
                        "Please check your inbox and click the link to confirm your subscription..."
                    }}</small>
                <small class="alert-error block">{{t
                        "There was an error sending the email..."
                    }}</small>
            </div>
        </form>

        <div class="grid grid-cols-1 lg:grid-cols-3 mt-24 gap-y-10 lg:gap-0">
            {{#if @site.secondary_navigation}}
                {{navigation type="secondary"}}
            {{/if}}
            <div class="text-center">
                <a href="{{@site.url}}">
                    {{> logo svgClasses="block mx-auto max-w-[72px] fill-white"}}
                </a>
                <div class="text-center text-white text-xs mt-4 font-semibold">
                    &copy; 2021-{{date format="YYYY"}}
                    <a href="{{@site.url}}">{{@site.title}}</a>
                </div>
            </div>

            <!-- Social -->
            <div
                class="flex items-center justify-center lg:ml-auto space-x-6 h-full"
            >
                {{#if @site.facebook}}
                    <a
                        href="https://facebook.com/{{@site.facebook}}"
                        target="_blank"
                    >
                        <i
                            class="fa-brands fa-facebook text-white hover:scale-125 transition-transform duration-300 ease-out-back"
                        ></i>
                    </a>
                {{/if}}
                {{#if @site.twitter}}
                    <a
                        href="https://twitter.com/{{@site.twitter}}"
                        target="_blank"
                        class="stroke-white"
                    >
                        <i
                            class="fa-brands fa-twitter text-white hover:scale-125 transition-transform duration-300 ease-out-back"
                        ></i>
                    </a>
                {{/if}}
                {{#if @custom.instagram_link}}
                    <a
                        href="{{@custom.instagram_link}}"
                        target="_blank"
                        class="stroke-white"
                    >
                        <i
                            class="fa-brands fa-instagram text-white hover:scale-125 transition-transform duration-300 ease-out-back"
                        ></i>
                    </a>
                {{/if}}
            </div>
            <!-- End Social -->

        </div>

    </div>
</footer>