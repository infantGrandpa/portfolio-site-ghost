{{!< default}}

<main>
    {{#post}}
    <div>
        <article class="{{post_class}}">
            <div class="main-bg py-6">
                <div class="container">
                    <div>
                        <div class="flex justify-between sm:items-center flex-col space-y-3 sm:space-y-0 sm:flex-row mb-1">
                            <div class="text-sm font-semibold text-white capitalize">
                                {{tags separator=" - "}}
                            </div>
                            <div class="flex space-x-2 sm:justify-end">
                                {{#if featured}}
                                    <div class="h-[40px] w-[40px] flex justify-center items-center bg-[#f6f7f8] rounded-full border-gray-200 border" data-tippy-content="{{t 'Featured post'}}" data-tippy-placement="bottom" data-tippy-animation="fade">
                                        <i class="fa-solid fa-star"></i>
                                    </div>
                                {{/if}}
                                {{#unless access}}
                                    <div class="h-[40px] w-[40px] flex justify-center items-center bg-[#f6f7f8] rounded-full border-gray-200 border" data-tippy-content="{{t 'Locked'}}" data-tippy-placement="bottom" data-tippy-animation="fade">
                                        <i class="fa-solid fa-lock"></i>
                                    </div>
                                {{/unless}}
                                {{#if comments}}
                                    <div class="px-3 self-center py-2 text-xs font-semibold flex justify-center items-center bg-[#f6f7f8] rounded-full border-gray-200 border">
                                        {{comment_count empty="0 comments" singular="comment" plural="comments"}}
                                    </div>
                                {{/if}}
                            </div>
                        </div>
                        <h1 class="display-font text-white">
                            {{title}}
                        </h1>
                        <div class="flex flex-col space-y-2 items-start md:flex-row md:items-center justify-between mb-6 mt-4">
                            <div class="text-base text-white">
                                {{excerpt}}
                            </div>
                            <div class="text-xs text-white min-w-fit">
                                <i class="fa-regular fa-clock"></i>
                                <time datetime="{{date format="YYYY-MM-DD"}}">{{date}}</time>
                                <span> - </span>
                                <span>{{reading_time}}</span>
                            </div>
                        </div>
                        
                    </div>
                    <div>
                        <div class="h-auto rounded-[32px]">
                        {{#if feature_image}}
                            <figure class="relative">
                                <div class="rounded-[32px] relative overflow-hidden h-[350px] md:h-[500px] lg:h-[600px] w-full block">
                                    <img class="rounded-[32px] lazyload fadeup absolute object-cover object-top w-full h-full" src="{{img_url feature_image size="xxs"}}" data-src="{{img_url feature_image size="xl"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
                                </div>
                                {{#if feature_image_caption}}
                                    <figcaption class="text-xs mt-2 text-white text-center"> 
                                    {{feature_image_caption}}
                                    </figcaption>
                                {{/if}}
                            </figure>
                        {{/if}}
                        </div>
                    </div>
                    
                </div>
            </div>

            <div class="container">
                <div class="max-w-2xl mx-auto pt-4">
                    <div  id="trex_article_content" class="prose-base prose-img:m-0 prose-hr:border-gray-200 main-color prose-headings:mb-1 prose-headings:mt-8">
                        {{content}}
                    </div>
                    <div class="border-t border-b border-gray-100 pt-6 pb-9 mt-16 text-center">
                        <span class="uppercase display-font text-sm">{{t "share"}}</span>
                        <div class="flex justify-center space-x-3 mt-4">
                            <a href="https://www.facebook.com/share.php?u={{url absolute="true"}}" class="sweeping-underline w-[40px] h-[40px] flex justify-center items-center bg-[#f6f7f8] hover:bg-gray-100">
                                <i class="fa-brands fa-square-facebook"></i>
                            </a>
                            <a href="https://twitter.com/intent/tweet?text={{url absolute="true"}}" class="sweeping-underline w-[40px] h-[40px] flex justify-center items-center bg-[#f6f7f8] hover:bg-gray-100">
                                <i class="fa-brands fa-square-twitter"></i>
                            </a>
                            <a href="https://www.linkedin.com/shareArticle?mini=true&title={{title}}=&url={{url absolute="true"}}" class="sweeping-underline w-[40px] h-[40px] flex justify-center items-center bg-[#f6f7f8] hover:bg-gray-100">
                                <i class="fa-brands fa-linkedin"></i>
                            </a>
                            <a href="http://pinterest.com/pin/create/link/?url={{url absolute="true"}}" class="sweeping-underline w-[40px] h-[40px] flex justify-center items-center bg-[#f6f7f8] hover:bg-gray-100">
                                <i class="fa-brands fa-square-pinterest"></i>
                            </a>
                            <button id="trex_copy" class="sweeping-underline w-[40px] h-[40px] flex justify-center items-center bg-[#f6f7f8] hover:bg-gray-100">
                                <i class="fa-solid fa-copy"></i>
                            </button>
                        </div>
                        <div class="text-xs font-medium mt-4 hidden" id="trex_copy_msg">
                            {{t "The link has been copied!"}}
                        </div>
                    </div>
                </div>
            </div>
        </article>

        <div class="max-w-[1000px] mx-auto">
            {{> 'post-navigation'}}
            {{#if comments}}
                {{> 'comments'}}
            {{/if}}
        </div>

        {{> 'related-posts'}}

    </div>
    {{/post}}
</main>